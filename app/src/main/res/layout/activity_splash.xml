<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.SplashActivity">


    <mysmarthome.londonhydro.com.mysmarthome.CustomViews.OpensansBoldFont
        android:id="@+id/txtVwSectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:text="@string/str_my_smart_home"
        android:textColor="#000000"
        android:textSize="32sp" />

    <!--<ProgressBar-->
    <!--android:id="@+id/progressBar1"-->
    <!--style="?android:attr/progressBarStyleLarge"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginBottom="80dp" />-->

    <mysmarthome.londonhydro.com.mysmarthome.HelperClasses.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="80dp"
        wheel:matProg_barColor="#A30031"
        wheel:matProg_progressIndeterminate="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_above="@+id/txtVwSectionName"
        android:layout_centerHorizontal="true"
        android:src="@drawable/my_samrt_home" />

    <mysmarthome.londonhydro.com.mysmarthome.CustomViews.OpensansSemiBoldFont
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Powered by"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#55000000"
        android:textSize="13sp" />

    <mysmarthome.londonhydro.com.mysmarthome.CustomViews.OpensansSemiBoldFont
        android:id="@+id/txt_about_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVwSectionName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Loading..."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="13sp" />
</RelativeLayout>
